{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "AllowIAMReadOnly",
          "Effect": "Allow",
          "Action": [
              "iam:Get*",
              "iam:List*"
          ],
          "Resource": "*"
      },
      {
          "Sid": "AllowCloudTrailReadOnly",
          "Effect": "Allow",
          "Action": [
              "cloudtrail:DescribeTrails",
              "cloudtrail:GetTrailStatus",
              "cloudtrail:LookupEvents",
              "cloudtrail:ListTrails",
              "cloudtrail:GetEventSelectors"
          ],
          "Resource": "*"
      },
      {
          "Sid": "AllowEC2Describe",
          "Effect": "Allow",
          "Action": [
              "ec2:Describe*"
          ],
          "Resource": "*"
      },
      {
          "Sid": "AllowCloudWatchRead",
          "Effect": "Allow",
          "Action": [
              "cloudwatch:Describe*",
              "cloudwatch:Get*",
              "cloudwatch:List*",
              "logs:Describe*",
              "logs:Get*",
              "logs:FilterLogEvents"
          ],
          "Resource": "*"
      },
      {
          "Sid": "AllowS3ReadForCloudTrailLogs",
          "Effect": "Allow",
          "Action": [
              "s3:ListBucket",
              "s3:GetBucketLocation"
          ],
          "Resource": "*"
      },
      {
          "Sid": "AllowS3ObjectRead",
          "Effect": "Allow",
          "Action": [
              "s3:GetObject"
          ],
          "Resource": "*"
      },
      {
          "Sid": "AllowKMSReadForEncryptedLogs",
          "Effect": "Allow",
          "Action": [
              "kms:DescribeKey",
              "kms:GetKeyPolicy",
              "kms:Decrypt"
          ],
          "Resource": "*"
      }
  ]
}